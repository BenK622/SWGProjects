@model List<BATZBlog.Models.Show>
@{
    ViewBag.Title = "TourDates";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12">
            <div>
                <img class="img-margin-default img-resize-left" src="~/MediaFiles/Images/tytyty.jpg"/>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-6">
            <div>
                <div class="blogTitle margin-spacer">Upcoming Tour Dates</div>

                @if(Model.Count != 0)
                {
                    foreach(var show in Model)
                    {
                        if(show.ShowDate > DateTime.Now)
                        {
                            <div class="sideBarPost margin-spacer">
                                <table class="table">
                                    <tr class="blogBody row">
                                        <th class="tour col-xs-3">Date</th>
                                        <th class="tour col-xs-4">Venue</th>
                                        <th class="tour col-xs-5">Location</th>
                                        @*@Html.ActionLink( " ", "SingleShowDisplay", "Public", new { showId = show.ShowId }, new { @class = "fold" } )*@
                                    </tr>

                                    <tr class="blogBody row">
                                        <td class="col-xs-3">@show.ShowDate.ToShortDateString( )</td>
                                        <td class="col-xs-4">@show.VenueName</td>
                                        <td class="col-xs-5">@show.City, @show.State</td>
                                    </tr>
                                </table>
                            </div>
                        }
                    }
                }
                else
                {
                    <p style="color: red">
                        There are no upcoming tour dates!
                    </p>
                }
            </div>
        </div>
        <div class="col-xs-6">
            <div>
                <div class="blogTitle margin-spacer">Past Tour Dates </div>

                @if(Model.Count != 0)
                {
                    foreach(var show in Model)
                    {
                        if(show.ShowDate < DateTime.Now)
                        {
                            <div class="sideBarPost margin-spacer">
                                <table class="table">
                                    <tr class="row blogBody">
                                        <th class="tour col-xs-3">Date</th>
                                        <th class="tour col-xs-4">Venue</th>
                                        <th class="tour col-xs-5">Location</th>
                                    </tr>

                                    <tr class="row blogBody">
                                        <td class="col-xs-3">@show.ShowDate.ToShortDateString( )</td>
                                        <td class="col-xs-4">@show.VenueName</td>
                                        <td class="col-xs-5">@show.City, @show.State</td>
                                    </tr>
                                </table>
                            </div>
                        }
                    }
                }
                else
                {
                    <p style="color: red">
                        There are no past tour dates!
                    </p>
                }

            </div>
        </div>
    </div>
</div>