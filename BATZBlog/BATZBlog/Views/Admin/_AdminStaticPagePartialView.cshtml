@using BATZBlog.Models
@model List<BATZBlog.Models.StaticPages>


<div class="row" style="margin: 15px 0 0px 5px">
    <div class="col-xs-2 nopadding" style="padding-top: 15px;">
        @Html.ActionLink("Add Tour", "AddStaticPage", "Admin", null, new { @class = "btn btn-success" })
    </div>
</div>


<div class="container-fluid">
    <div class="row">
        <table class="col-xs-12 table-striped tableForOrders tablerow margin-spacer">
            <thead class="showTableHeader">
            @if(Model.Count != 0)
            {
                <tr>
                    <th>
                        Tours
                    </th>
                    <th>
                    </th>
                    <th>
                    </th>
                </tr>
            }

            </thead>

            <tbody>
            @if(Model.Count != 0)
            {
                foreach(var page in Model)
                {
                    <tr>
                        <td>
                            @Html.ActionLink( page.Title, "StaticPageDisplay", "Public", new { page.PageId }, null )
                        </td>

                        <td>
                            @Html.ActionLink( "Edit", "EditStaticPage", "Admin", new { page.PageId }, new { @class = "btn btn-info" } )
                        </td>

                        <td>
                            @Html.ActionLink( "Delete", "DeleteStaticPage", "Admin", new { page.PageId }, new { @class = "btn btn-danger" } )
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td style="color: red">
                        There are no static pages!
                    </td>
                </tr>
            }


            </tbody>

        </table>
    </div>

</div>