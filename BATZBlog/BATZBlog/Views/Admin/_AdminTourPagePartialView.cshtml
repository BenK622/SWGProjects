@using BATZBlog.Models
@model List<BATZBlog.Models.Show>

<div class="row" style="margin: 15px 0 0px 5px">
    <div class="col-xs-2 nopadding" style="padding-top: 15px;">
        @Html.ActionLink("Add Show", "AddShow", "Admin", null, new { @class = "btn btn-success" })
    </div>

</div>


<div class="container-fluid">
    <div class="row">
        <table class="col-xs-12 table-striped tableForOrders tablerow margin-spacer">
            <thead class="showTableHeader">
            @if(Model.Count != 0)
            {
                <tr>
                    <th>
                        Date
                    </th>
                    <th>
                        Location
                    </th>
                    <th>
                        Venue
                    </th>
                    <th>
                    </th>
                    <th>
                    </th>
                </tr>
            }

            </thead>

            <tbody>
            @if(Model.Count != 0)
            {
                foreach(var show in Model)
                {
                    <tr>
                        <td>
                            @show.ShowDate.ToShortDateString( )
                        </td>

                        <td>
                            @show.City, @show.State
                        </td>

                        <td>
                            @show.VenueName
                            @*@Html.ActionLink(show.VenueName, "TourDates", "Public", new { show.ShowId }, null)*@
                        </td>

                        <td>
                            @Html.ActionLink( "Edit", "EditShow", "Admin", new { show.ShowId }, new { @class = "btn btn-info" } )
                        </td>

                        <td>
                            @Html.ActionLink( "Delete", "DeleteShow", "Admin", new { show.ShowId }, new { @class = "btn btn-danger" } )
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td style="color: red">
                        There are no static pages!
                    </td>
                </tr>
            }


            </tbody>

        </table>
    </div>

</div>