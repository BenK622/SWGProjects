@model BATZBlog.Models.StaticPages

@{
    ViewBag.Title = "Add Tour Page";
}

<h3 class="adminTitle">Add New Tour</h3>

@using (Html.BeginForm("AddStaticPage", "Admin", FormMethod.Post, new { id = "pageForm" }))
{
    <div class="form-group">
        <div class="col-sm-12">
            <div>
                <label>Title</label>
                @Html.TextBoxFor(p => p.Title, new { @class = "form-control", placeholder = "Title" })
                <div class="error">@Html.ValidationMessageFor(p => p.Title)</div>
            </div>
            <br />

            <div>
                <label>Body</label>
                @Html.TextAreaFor(p => p.PageBody, new { @class = "form-control", id = "mytextarea" })
                <div class="error">@Html.ValidationMessageFor(p => p.PageBody)</div>
            </div>
            <br />
        </div>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    @Html.ActionLink("Cancel", "Index", "Admin", null, new { @class = "btn btn-info" })
}

@section scripts{
    <script src="//cdn.tinymce.com/4/tinymce.min.js"></script>
    <script src="~/scripts/app/tinyMceToolbar.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/App/PageValidation.js"></script>
    <script src="~/Scripts/app/jquery-validate-defaults.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
}
