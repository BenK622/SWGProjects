@model HrPortal.Models.ApplicantVM

@{
    ViewBag.Title = "Apply";
}

<h2>Apply</h2>
@Html.ActionLink("Return to Job Index", "Index", "Job")
<div class="col-xs-push-12;col-lg-4;col-md-6">
        <h3 style="text-align:left">Job Being Applied for</h3>
        <div class="shadow" style="margin:25px">
            <div  class="jobtitle">
                @Model.job.JobName
            </div>
            <div class="jobdescription">
                @Model.job.JobDescription
            </div>
        </div>
</div>
<div class="row" id="applicantForm">
    <div>
        <h3>Applicant Information</h3>
    </div>
    <div class="row">
        @using (Html.BeginForm("Apply", "Job", null, FormMethod.Post, new { enctype = "multipart/form-data", id = "applyForm" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.job.JobName)
            <form>
                <div class="form-group">
                    <label>First Name</label>
                    @Html.TextBoxFor(m => m.applicant.FirstName, new { @class = "form-control", placeholder = "FirstName" } )
                </div>
                <div class="form-group">
                    <label>Last Name</label>
                    @Html.TextBoxFor(m => m.applicant.LastName, new { @class = "form-control", placeholder = "LastName" })
                </div>
                <div class="form-group">
                    <label>Email</label>
                    @Html.TextBoxFor(m => m.applicant.Email, new { @class = "form-control", placeholder = "Email" })
                </div>
                <div class="form-group">
                    <label>Phone Number</label>
                    @Html.TextBoxFor(m => m.applicant.PhoneNumber, new { @class = "form-control", placeholder = "PhoneNumber" })
                </div>
                <div class="form-group">
                    <label>Attach Resume </label>
                    <input type="file" name="file" id="file" />
                </div>
                <button type="submit" class="btn btn-default">Submit</button>
            </form>
        }
    </div>
    
</div>

@section scripts{
    
    <script src="~/Scripts/jquery.validate.min.js"></script>   
    <script src="~/Scripts/additional-methods.min.js"></script>
    <script src="~/Scripts/App/applyValidation.js"></script>
    <script src="~/Scripts/App/jquery-validate-defaults.js"></script>
    
    
}

